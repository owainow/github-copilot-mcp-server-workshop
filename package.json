{
  "name": "serverless-mcp-on-functions",
  "version": "1.0.0",
  "description": "GitHub Copilot Custom MCP Server on Azure Functions - Workshop",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "build:production": "tsc --build --verbose",
    "start": "func start",
    "start:dev": "tsc --watch & func start",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "deploy": "npm run build:production && func azure functionapp publish $AZURE_FUNCTION_APP_NAME",
    "deploy:quick": "npm run build:production && az deployment group create --resource-group mcp-workshop-rg --template-file infra/main.bicep --parameters @infra/main.parameters.json",
    "infra:deploy": "az deployment group create --resource-group mcp-workshop-rg --template-file infra/main.bicep --parameters @infra/main.parameters.json",
    "infra:destroy": "az group delete --name mcp-workshop-rg --yes",
    "local:setup": "npm install && npm run build",
    "workshop:setup": "node scripts/setup-workshop.js"
  },
  "dependencies": {
    "@azure/functions": "^4.5.0",
    "axios": "^1.6.0",
    "cheerio": "1.0.0-rc.12",
    "marked": "^12.0.0",
    "semver": "^7.6.0",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/semver": "^7.5.0",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.4.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "github-copilot",
    "mcp",
    "azure-functions",
    "serverless",
    "ai-tools",
    "workshop"
  ],
  "author": "GitHub Copilot Workshop Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-repo/serverless-mcp-on-functions.git"
  }
}
