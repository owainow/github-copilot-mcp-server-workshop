# Environment Configuration
AZURE_SUBSCRIPTION_ID=your-subscription-id-here
AZURE_RESOURCE_GROUP=mcp-workshop-rg
AZURE_FUNCTION_APP_NAME=mcp-server-functions-unique-name
AZURE_REGION=eastus

# MCP Server Configuration
MCP_SERVER_NAME=GitHub Copilot MCP Server
MCP_SERVER_VERSION=1.0.0
MCP_LOG_LEVEL=info

# Tool Configuration
ENABLE_MARKDOWN_TOOL=true
ENABLE_DEPENDENCY_TOOL=true
ENABLE_CUSTOM_TOOLS=true

# Security Configuration
ALLOWED_ORIGINS=https://github.com,https://vscode.dev
API_KEY_HEADER=X-MCP-API-KEY

# Azure Function Configuration
FUNCTIONS_WORKER_RUNTIME=node
WEBSITE_NODE_DEFAULT_VERSION=~18
WEBSITE_RUN_FROM_PACKAGE=1

# Monitoring and Logging
APPINSIGHTS_INSTRUMENTATIONKEY=your-app-insights-key
APPLICATIONINSIGHTS_CONNECTION_STRING=your-connection-string
